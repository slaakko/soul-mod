expressions otava.command.expr
{
    ws = "[\n\r\t ]";
    newline = "\r\n|\n|\r";
    line_comment = "//[^\n\r]*{newline}";
    block_comment = "/\*([^*]|\*[^/])*\*/";
    separators = "({line_comment}|{block_comment}|{ws})+";
    id = "{unicode_id_start}{unicode_id_cont}*";
    filePath = "[-a-zA-Z0-9.\\/]+";
}
